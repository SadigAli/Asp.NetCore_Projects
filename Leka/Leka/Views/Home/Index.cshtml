<div class="section-trend">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="leka-banner-text banner-style2 dark">
                    <a href="~/#">
                        <figure><img src="~/images/b-4.png" alt=""></figure>
                        <span class="banner-text">
                            <span class="title-banner text-uppercase margin-bottom">OFF 65%</span>
                            <span class="desc-banner">GATHERED WAIST  SHORTS WITH POCKETS </span>
                        </span>
                    </a>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="leka-product-grid">
                    <h2>TREND 2016</h2>
                    <div class="row">
                        @foreach (Product product in Model)
                        {
                            <div class="col-md-3 col-sm-6 col-xs-12 product">
                                <div class="product-thumb">
                                    <a asp-action="detail" asp-route-id="@product.Id">
                                        <img width="200" height="250" src="~/uploads/products/@product.ProductColors.FirstOrDefault().ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="">
                                    </a>
                                    <div class="product-button">
                                        <a asp-action="detail" asp-route-id="@product.Id" class="button-compare">Compare</a>
                                        <a href="~/#" class="button-wishlist">Wishlist</a>
                                        <a href="~/#" class="button-quickview">Quick view</a>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h3><a asp-action="detail" asp-route-id="@product.Id">@product.Name</a></h3>
                                    <span class="product-price">$@(product.DiscountPrice!=0?product.SalePrice-product.DiscountPrice:product.SalePrice)</span>
                                    <a href="~/#" class="button-add-to-cart">ADD TO CART</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
