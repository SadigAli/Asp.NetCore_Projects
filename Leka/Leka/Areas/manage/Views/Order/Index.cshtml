@model List<Order>
@{
    ViewData["Title"] = "Index";
}

@{
    int counter = 0;
}
@section Css{
<style>
    @@charset "UTF-8";
    @@import url("https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css");

    .pcs:after {
        content: " pcs";
    }

    .cur:before {
        content: "$";
    }

    .per:after {
        content: "%";
    }

    * {
        box-sizing: border-box;
    }

    body {
        padding: 0.2em 2em;
    }

    table {
        width: 100%;
    }

    table th {
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    table th,
    table td {
        padding: 0.4em;
    }

    table.fold-table>tbody>tr.view td,
    table.fold-table>tbody>tr.view th {
        cursor: pointer;
    }

    table.fold-table>tbody>tr.view td:first-child,
    table.fold-table>tbody>tr.view th:first-child {
        position: relative;
        padding-left: 20px;
    }

    table.fold-table>tbody>tr.view td:first-child:before,
    table.fold-table>tbody>tr.view th:first-child:before {
        position: absolute;
        top: 50%;
        left: 5px;
        width: 9px;
        height: 16px;
        margin-top: -8px;
        font: 16px fontawesome;
        color: #999;
        content: "ïƒ—";
        transition: all 0.3s ease;
    }

    table.fold-table>tbody>tr.view:nth-child(4n-1) {
        background: #eee;
    }

    table.fold-table>tbody>tr.view:hover {
        background: #ccc;
    }

    table.fold-table>tbody>tr.view.open {
        background: #ccc;
        color: white;
    }

    table.fold-table>tbody>tr.view.open td:first-child:before,
    table.fold-table>tbody>tr.view.open th:first-child:before {
        transform: rotate(-180deg);
        color: #333;
    }

    table.fold-table>tbody>tr.fold {
        display: none;
    }

    table.fold-table>tbody>tr.fold.open {
        display: table-row;
    }

    .fold-content {
        padding: 0.5em;
    }

    .fold-content h3 {
        margin-top: 0;
    }

    .fold-content>table {
        border: 2px solid #ccc;
    }

    .fold-content>table>tbody tr:nth-child(even) {
        background: #eee;
    }
</style>

}
<div class="row">
    @* <input type="hidden" id="success" value=@TempData["IsSuccess"]> *@
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex">
                    <h4 class="card-title">Orders</h4>
                </div>
                <table class="fold-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>FullName</th>
                            <th>Total Price</th>
                            <th>Date</th>
                            <th>Order Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Order order in Model)
                        {
                            counter++;
                            <tr class="view">
                                <td>@counter</td>
                                <td>@order.Fullname</td>
                                <td class="cur">@(order.TotalPrice)</td>
                                <td>@order.Date.ToString("dd-MMM-yyyy")</td>
                                <td>
                                    @switch (order.OrderStatus)
                                    {
                                        case Leka.Models.Enums.OrderStatus.Pending:
                                            <span class="badge bg-warning">@order.OrderStatus</span>
                                            break;
                                        case Leka.Models.Enums.OrderStatus.Accepted:
                                            <span class="badge bg-success">@order.OrderStatus</span>
                                            break;
                                        case Leka.Models.Enums.OrderStatus.Rejected:
                                            <span class="badge bg-danger">@order.OrderStatus</span>
                                            break;
                                        default:
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-action="detail" asp-route-id="@order.Id" class="btn btn-info mr-2">
                                        <i class="mdi mdi-pen"></i>
                                    </a>
                                    @if (order.OrderStatus == Leka.Models.Enums.OrderStatus.Pending)
                                    {
                                        <a asp-action="accept" asp-route-id="@order.Id" class="btn btn-success accept">
                                            <i class="mdi mdi-check"></i>
                                        </a>
                                        <a asp-action="reject" asp-route-id="@order.Id" class="btn btn-danger reject">
                                            <i class="mdi mdi-trash-can"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                            if (order.OrderItems.Count() != 0)
                            {
                                int orderItemCounter = 0;
                                <tr class="fold">
                                    <td colspan="7">
                                        <div class="fold-content">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Product</th>
                                                        <th>Price</th>
                                                        <th>Count</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (OrderItem orderItem in order.OrderItems)
                                                    {
                                                        orderItemCounter++;
                                                        <tr>
                                                            <td>@orderItemCounter</td>
                                                            <td>@orderItem.ProductName</td>
                                                            <td>@orderItem.ProductPrice</td>
                                                            <td>@orderItem.Count</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js"></script>
<script>
    $(function () {
        $(".fold-table tr.view").on("click", function () {
            $(this).toggleClass("open").next(".fold").toggleClass("open");
        });
</script>
}